<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dtalliance">

    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LoginActivity"/>
        <activity
            android:name=".activity.DTActivity"
            android:theme="@style/Widget.AppCompat.Toolbar"/>

        <activity android:name=".activity.WriteNoteActivity"
            android:theme="@style/Widget.AppCompat.Toolbar"/>
        <activity android:name=".activity.OutputNoteActivity"/>
        <activity android:name=".activity.OpenVideoActivity"/>
        <activity android:name=".activity.DreamVersusActivity"/>
        <activity android:name=".activity.LaunchVsActivity"/>
        <activity android:name=".activity.TeamDreamActivity"/>
        <activity android:name=".activity.DreamTreeActivity"/>
        <activity android:name=".activity.TaskActivity"/>
        <activity android:name=".activity.TeamCreateActivity"/>
        <activity android:name=".activity.TaskDetailActivity"/>
        <activity android:name=".activity.TeamTaskActivity"/>
        <activity android:name=".activity.TeamTaskAddActivity"/>
        <activity android:name=".activity.RegistActivity"/>
    </application>

</manifest>