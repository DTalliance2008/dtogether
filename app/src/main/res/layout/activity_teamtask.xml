<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/task_background">

    <!--横线一 -->
    <TextView
        android:id="@+id/tv_teamtask_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"/>
<!--android:background="@drawable/homepage_line" -->
    <!--头像一 -->
    <ImageButton
        android:id="@+id/ib_teamtask_myicon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/tv_teamtask_line"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/tv_teamtask_teamname"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/tv_teamtask_line"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/ib_teamtask_myicon"
        android:text="宇宙第一团队"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_teamtask_teamtaskpro"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_teamtask_teamname"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/ib_teamtask_myicon"
        android:text="任务进度："
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_teamtask_teamtaskprogress"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/tv_teamtask_teamname"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tv_teamtask_teamtaskpro"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="66%"
        android:textColor="#ff9900"
        android:textSize="16sp" /><!--android:background="@drawable/homepage_tv"-->

    <!--横线一 -->
    <TextView
        android:id="@+id/tv_teamtask_lineone"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/ib_teamtask_myicon"
        android:layout_marginTop="5dp"
        /><!-- android:background="@drawable/homepage_line"-->

    <!--最终梦想任务  最终梦想任务 最终梦想任务  最终梦想任务   最终梦想任务  最终梦想任务 最终梦想任务  最终梦想任务最终梦想任务  最终梦想任务 最终梦想任务  最终梦想任务最终梦想任务  最终梦想任务 最终梦想任务  最终梦想任务 -->
