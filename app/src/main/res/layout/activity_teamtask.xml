            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_teamtask_terminalone"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="任务二："
            android:textColor="#ff6666"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_teamtask_terminaltwocontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_teamtask_terminalonecontent"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tv_teamtask_terminaltwo"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="没事别溜达那是干啥"
            android:textColor="#ff6666"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_teamtask_terminalthree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_teamtask_terminaltwo"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="任务三："
            android:textColor="#ff6666"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_teamtask_terminalthreecontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_teamtask_terminaltwocontent"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tv_teamtask_terminalthree"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="吃掉三个包子干掉一帮人那是很好的 "
            android:textColor="#ff6666"
            android:textSize="16sp" />

    </RelativeLayout>

