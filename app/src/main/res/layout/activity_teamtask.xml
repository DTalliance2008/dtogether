            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_teamtask_linetwo"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@+id/tv_teamtask_terminalcontent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="2dp"
           />
<!--        android:background="@drawable/homepage_line"-->
        <TextView
            android:id="@+id/tv_teamtask_terminalone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_teamtask_linetwo"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="任务一："
            android:textColor="#ff6666"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_teamtask_terminalonecontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_teamtask_linetwo"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tv_teamtask_terminalone"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="吃完一天的饭"
            android:textColor="#ff6666"
            android:textSize="16sp" />

        <TextView
