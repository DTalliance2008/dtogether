<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_background">

    <RelativeLayout
        android:id="@+id/regster_div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/register_background_div"
        android:orientation="vertical">

        <TextView
            android:id="@+id/reister_username_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="账号"
            android:textSize="18sp"

            />

        <EditText
            android:id="@+id/et_regist_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/reister_username_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/register_background_edittext"
            android:hint="用户名"
            android:inputType="text"
            android:singleLine="true" />
        <!-- 密码 text -->
        <TextView
            android:id="@+id/reister_password_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_regist_email"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:text="密码"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_regist_passwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/reister_password_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/register_background_edittext"
            android:hint="密码"
            android:inputType="textPassword"
            android:singleLine="true" />
        <!-- 确认密码 text -->
        <TextView
            android:id="@+id/reister_pw_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_regist_passwd"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:text="请确认密码"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_regist_repasswd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/reister_pw_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/register_background_edittext"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:singleLine="true" />

        <!-- 注册button -->
        <Button
            android:id="@+id/bt_regist_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_regist_repasswd"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/register_background_bt"
            android:text="注册" />

    </RelativeLayout>


</RelativeLayout>




