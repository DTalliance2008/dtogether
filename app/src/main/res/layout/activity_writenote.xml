<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#3cbaed"
    >
    <!-- 日记标题-->
    <EditText
        android:id="@+id/bt_notewrite_title"
        android:background="@drawable/notewrite_background_bt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="#666666"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:hint="添加标题。。。"
        />
    <!-- 编写日记 -->
    <EditText
        android:id="@+id/et_notewrite_note"
        android:background="@mipmap/notebg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:textSize="16sp"
        android:textColor="#990066"
        android:layout_below="@+id/bt_notewrite_title"
        android:layout_above="@+id/bt_notewrite_ulphoto"
        android:layout_marginTop="5dp"
        android:hint="记录我的奔跑路程。。。"
        />
    <!--  上传照片界面 -->
    <Button
        android:id="@+id/bt_notewrite_ulphoto"
        android:background="@drawable/notewrite_background_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="14sp"
        android:textColor="#ffffcc"
        android:text="上传图片"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        />
    <!--     更改背景按钮 -->
    <Button
        android:id="@+id/bt_notewrite_background"
        android:background="@drawable/notewrite_background_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="14sp"
        android:textColor="#ffffcc"
        android:text="更换背景"
        android:layout_toLeftOf="@+id/bt_notewrite_ulphoto"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        />
    <!--  选择心情按钮 -->
    <Button
        android:id="@+id/bt_notewrite_mood"
        android:background="@drawable/notewrite_background_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="14sp"
        android:textColor="#ffffcc"
        android:text="选择心情"
        android:layout_toLeftOf="@+id/bt_notewrite_background"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        />

</RelativeLayout>
