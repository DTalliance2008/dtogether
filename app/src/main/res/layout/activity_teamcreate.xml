<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/task_background">

    <RelativeLayout
        android:id="@+id/rl_teamcreate_div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/task_background_div"
        android:orientation="vertical"
        android:paddingBottom="5dp">
        <!-- 标题 -->


        <TextView
            android:id="@+id/tv_teamcreate_teamname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:text="团队名称："
            android:textSize="18sp"

            />

        <EditText
            android:id="@+id/et_teamcreate_teamname"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/tv_teamcreate_teamname"
            android:background="@drawable/task_background_edittext"
            android:gravity="center"
            android:hint="请为您的团队取个名字"
            android:inputType="text"
            android:textSize="14sp" />

        <!--     选择logo -->


        <TextView
            android:id="@+id/tv_teamcreate_logochoose"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/tv_teamcreate_teamname"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="选择团队LOGO:"
            android:textColor="#ff6666"
            android:textSize="18sp"

            />

        <Button
            android:id="@+id/bt_teamcreate_logochoose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_teamcreate_teamname"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/tv_teamcreate_logochoose"
            android:background="@drawable/teamcreate_circle"
            android:gravity="center"
            android:inputType="number"
            android:text="+"
            android:textColor="#ff0000"
            android:textSize="20sp" />

        <!-- 选择队友一 -->
        <Button
            android:id="@+id/bt_teamcreate_lineone"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/bt_teamcreate_logochoose"
            android:background="@drawable/task_background_line" />


        <TextView
            android:id="@+id/tv_teamcreate_teammatechoose"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/bt_teamcreate_lineone"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="选择队友:"
            android:textColor="#ff6666"
            android:textSize="18sp"

            />

        <Button
            android:id="@+id/bt_teamcreate_teammatechoose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt_teamcreate_lineone"
            android:layout_marginLeft="47dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/tv_teamcreate_teammatechoose"
            android:background="@drawable/teamcreate_circle"
            android:gravity="center"
            android:inputType="number"
            android:text="+"
            android:textColor="#ff0000"
            android:textSize="20sp" />
        <!-- 终极目标 -->
        <Button
            android:id="@+id/bt_teamcreate_linetwo"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/bt_teamcreate_teammatechoose"
            android:background="@drawable/task_background_line" />
        <!-- 终极目标 -->
        <TextView
            android:id="@+id/tv_teamcreate_terminaldream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt_teamcreate_linetwo"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="团队最终梦想："
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_teamcreate_terminaldream"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_teamcreate_terminaldream"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/task_background_edittext"
            android:hint="请为团队设置最终梦想"
            android:textSize="14sp" />

        <Button
            android:id="@+id/bt_teamcreate_tertaskadd"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/et_teamcreate_terminaldream"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/task_background_bt"
            android:text="+添加任务"
            android:textColor="#ff6666"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_teamcreate_terlistone"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/et_teamcreate_terminaldream"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/bt_teamcreate_tertaskadd"
            android:gravity="center"
            android:textColor="#ff6666"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_teamcreate_terlisttwo"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/et_teamcreate_terminaldream"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tv_teamcreate_terlistone"
            android:gravity="center"
            android:textColor="#ff6666"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_teamcreate_terlistthree"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/et_teamcreate_terminaldream"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tv_teamcreate_terlisttwo"
            android:gravity="center"
            android:textColor="#ff6666"
            android:textSize="16sp" />

        <!-- 中期目标 -->
        <Button
            android:id="@+id/bt_teamcreate_linethree"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/bt_teamcreate_tertaskadd"
            android:layout_marginTop="5dp"
            android:background="@drawable/task_background_line" />

        <TextView
            android:id="@+id/tv_teamcreate_middledream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt_teamcreate_linethree"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="团队中期梦想："
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_teamcreate_middledream"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_teamcreate_middledream"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/task_background_edittext"
            android:hint="请为团队设置中期梦想"
            android:textSize="14sp" />

        <Button
            android:id="@+id/bt_teamcreate_midtaskadd"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/et_teamcreate_middledream"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/task_background_bt"
            android:text="+添加任务"
            android:textColor="#ff6666"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_teamcreate_midlistone"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/et_teamcreate_middledream"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/bt_teamcreate_midtaskadd"
            android:gravity="center"
            android:textColor="#ff6666"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_teamcreate_midlisttwo"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tv_teamcreate_midlistone"
            android:background="@drawable/task_background_bt"
            android:gravity="center"
            android:textColor="#ff6666"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_teamcreate_midlistthree"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/et_teamcreate_middledream"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tv_teamcreate_midlisttwo"
            android:gravity="center"
            android:textColor="#ff6666"
            android:textSize="16sp" />


        <!-- 初级目标 -->
        <Button
            android:id="@+id/bt_teamcreate_linefour"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/bt_teamcreate_midtaskadd"
            android:layout_marginTop="5dp"
            android:background="@drawable/task_background_line" />

        <TextView
            android:id="@+id/tv_teamcreate_firstdream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt_teamcreate_linefour"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:text="团队初级梦想："
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_teamcreate_firstdream"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_teamcreate_firstdream"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/task_background_edittext"
            android:hint="请为团队设置初级梦想"
            android:textSize="14sp" />

        <Button
            android:id="@+id/bt_teamcreate_firtaskadd"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/et_teamcreate_firstdream"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/task_background_bt"
            android:text="+添加任务"
            android:textColor="#ff6666"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_teamcreate_firlistone"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/et_teamcreate_firstdream"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/bt_teamcreate_firtaskadd"
            android:gravity="center"
            android:textColor="#ff6666"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_teamcreate_firlisttwo"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/et_teamcreate_firstdream"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tv_teamcreate_firlistone"
            android:gravity="center"
            android:textColor="#ff6666"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_teamcreate_firlistthree"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/et_teamcreate_firstdream"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tv_teamcreate_firlisttwo"
            android:gravity="center"
            android:textColor="#ff6666"
            android:textSize="16sp" />

    </RelativeLayout>


</RelativeLayout>
