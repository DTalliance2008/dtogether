<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/et_login"
    android:layout_width="fill_parent"
    android:background="@mipmap/background"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"

        android:paddingBottom="20dp"
        android:layout_above="@+id/login_layout_sign"
        >
        <EditText
            android:id="@+id/et_login_username"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="&#35831;&#36755;&#20837;&#29992;&#25143;&#21517;"
            android:textSize="18sp"
            android:background="@drawable/login_background_tv"
            android:gravity="center"
            android:layout_centerInParent="true" />
        <EditText
            android:id="@+id/et_login_passwd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:hint="输入您的密码"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:background="@drawable/login_background_tv"
            android:layout_below="@+id/et_login_username"
            />
        <CheckBox
            android:id="@+id/ck_login_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@+id/et_login_passwd"
            android:textColor="#44ffff"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="记住密码" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/login_layout_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:paddingBottom="40dp"
        >
        <Button
            android:id="@+id/bt_login_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/login_background_bt"
            android:text="&#30331;&#24405;"
            android:textColor="#44ffff"
            android:layout_toRightOf="@+id/bt_login_regist"

            />
        <Button
            android:id="@+id/bt_login_regist"
            android:layout_width="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content"
            android:textColor="#44ffff"
            android:background="@drawable/login_background_bt"
            android:text="&#27880;&#20876;"
            />
    </LinearLayout>

</RelativeLayout>