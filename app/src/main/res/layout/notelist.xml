<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/note_listview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/diarylist_background"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp">

        <TextView
            android:id="@+id/tv_notelist_icon1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_notelist_time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="11:11"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/tv_notelist_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_notelist_time1"
            android:layout_toRightOf="@id/tv_notelist_icon1"
            android:gravity="center"
            android:text="世界，你好"
            android:textSize="18sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/tv_notelist_note1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_notelist_title1"
            android:layout_toRightOf="@id/tv_notelist_icon1"
            android:gravity="center"
            android:text="就算你变了墨阳，就算我不在你身旁，你依然是我最爱的姑娘"
            android:textColor="#999999"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>
